generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(150)
  developer   String   @db.VarChar(150)
  distributor String   @db.VarChar(150)
  genre       String   @db.VarChar(100)
  released    DateTime
}
